{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main> 
    <section class="first-section"> 
    <div class="header-spacing" ></div>

<section class="home-hero mb-4 ">
  <div class="home-hero-inner space-top space-bottom">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-lg-6">
          <div class="title">
            <h1 class="white-text mb-4 p-8" style="font-size: 40px;">
              The <span class="yellow-text">smart way </span> <br>
              to sell or to buy your car
            </h1>
            <h4>Please sign in</h4>
          </div>
         
        </div>
      </div>
    </div>
  </div>
  <div class="home-hero-bottom d-none d-lg-block"></div>
 
</section>
</section> 
<section class="login-page space-top space-bottom">
  <div class="container text-center" width="40px">
    <div class=" justify-content-start space-small-bottom mb-4 reveal p-1" >
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.fullName) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}



    </div>
  </div>
  </div>
</section>
{% endblock %}
