<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
 <link rel="stylesheet" href="{{asset('css/style.css')}}">
 
     <title>{% block title %}O'Cars-Corner{% endblock %}</title>
  </head>
  <body>
      <header>
        <nav class="navbar fixed-top navbar-expand-lg" style="background-color:#3140c39f; height:5em">
      {% include '_nav.html.twig'%}


          {% if app.user %}
          <ul class="nav justify-content-end">
               
            <li class="nav-item">
              <a class="nav-link" style= "color:white">Welcome {{ app.user.username }}</a>
            </li>
            
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">My account</a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="{{ path('profile') }}">Profile</a></li>
                  <li><a class="dropdown-item" href="#">Wish list</a></li>
                  <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                  {% if is_granted('ROLE_ADMIN') == true %} 
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="{{ path('backoffice_home') }}">Backoffice</a></li>
                  <li><a class="dropdown-item" href="#">logout-Backoffice</a></li>
                   {% endif %}
                </ul>
              </li>
              {% else %}
              <button style="border-radius:1em">
              
                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
             
            </button>
          </ul>
          {% endif %}
        </div>
      </nav>

    </header>
      <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        </div>

         <main> 
    <section class="first-section" style="background-image:url({{asset('images/get-started-bg.jpg')}});"> 
    <div class="header-spacing" ></div>
    {% block body %}{% endblock %}
   

  
    <footer class="navbar expand-bottom navbar-expand-lg navbar-light my-3 mb-0" style="background-color:#3140c39f; height: 5em;">
      
           
              <div class="footer">
                      <h5>Thanks for Visiting our site| with love O'cars-Corner-2022</h5>
                </div>
           
    </footer>

    <!-- Optional JavaScript; choose one of the two! -->
<script src="{{asset('js/carscript.js')}}"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
