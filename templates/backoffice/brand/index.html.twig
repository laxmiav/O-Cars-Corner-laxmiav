{% block title %}Brand index{% endblock %}

{% block body %}
<section class="home-hero mb-4 ">
      <div class="home-hero-inner space-top space-bottom">
        <div class="container">
          <div class="row justify-content-center text-center">
            <div class="col-lg-6">
              <div class="title">
                <h1 class="white-text mb-4 p-8" style="font-size: 40px;">
                  <span class="yellow-text">Brands</span> <br>
                  
                </h1>
                
              </div>
             
            </div>
          </div>
        </div>
      </div>
      <div class="home-hero-bottom d-none d-lg-block"></div>
     
    </section>
    </section> 
               <section class="brands-list space-top space-bottom ">
        <div class="container">
            
                <div class="row">
    <h1>Brand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>{{ brand.image }}</td>
                <td>
                    <a class="btn" href="{{ path('backoffice_app_brand_show', {'id': brand.id}) }}">show</a>
                    <a class="btn" href="{{ path('backoffice_app_brand_edit', {'id': brand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('backoffice_app_brand_new') }}">Create new</a>
