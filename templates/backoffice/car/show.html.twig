{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>ReleaseYear</th>
                <td>{{ car.releaseYear ? car.releaseYear|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ car.slug }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ car.type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>FuelType</th>
                <td>{{ car.fuelType }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ car.image }}</td>
            </tr>
            <tr>
                <th>Seats</th>
                <td>{{ car.seats }}</td>
            </tr>
            <tr>
                <th>OtherSpec</th>
                <td>{{ car.otherSpec }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_car_index') }}">back to list</a>

    <a href="{{ path('app_backoffice_car_edit', {'id': car.id}) }}">edit</a>

    {{ include('backoffice/car/_delete_form.html.twig') }}
{% endblock %}
