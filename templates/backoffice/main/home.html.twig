{% extends 'base.html.twig' %}

{% block title %}O'cars{% endblock %}

{% block body %}
  <div class="container my-4">
       
        <h2>Welcome to AdMinistration of O'cars</h2>
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">model</th>
                    <th scope="col">year</th>
                    <th scope="col">Brand</th>
                    
                     <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
              {% for car in cars %}  
                <tr>
                    <th scope="row">{{car.id}}</th>
                    <td>{{car.model}}</td>
                    <td>{{car.releaseYear|date('Y')}}</td>
                    <td>{{car.brands.name}}</td>
                   
                    <td class="text-end">
                     <a href="{{path('car_detail',{id:car.id})}}" class="btn btn-sm btn-warning">
                            <i class="fa fa-pencil-square-o" aria-hidden="true">Details</i>
                        </a>
                        
                         <a href="{{path('cars_edit',{id:car.id})}}" class="btn btn-sm btn-warning">
                            <i class="fa fa-pencil-square-o" aria-hidden="true">Edit</i>
                        </a>
                         <a href="{{path('cars_delete',{id:car.id})}}" class="btn btn-sm btn-danger">
                            <i class="fa fa-pencil-square-o" aria-hidden="true">Delete</i>
                        </a>
                       
                    </td>
                </tr>
               {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
