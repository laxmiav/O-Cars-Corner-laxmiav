{% extends 'base.html.twig' %}

{% block title %}O'cars{% endblock %}

{% block body %}
    <section class="home-hero mb-4 ">
      <div class="home-hero-inner space-top space-bottom">
        <div class="container">
          <div class="row justify-content-center text-center">
            <div class="col-lg-6">
              <div class="title">
                <h1 class="white-text mb-4 p-8" style="font-size: 40px;">
                  <span class="yellow-text">Our Brands </span> <br>
                  
                </h1>
                
              </div>
             
            </div>
          </div>
        </div>
      </div>
      <div class="home-hero-bottom d-none d-lg-block"></div>
     
    </section>
    </section> 

    <section class="brands-list space-top space-bottom ">
        <div class="container">
        <div class="row g-5 justify-content-center px-10 text-center">
           {% for brand in brands %} 
          <div class="brands-d col-md-2 mx-2 p-5" >

            <div class="brands">
                <img src="{{ asset('/uploads/'~ brand.image) }}" alt="{{brand.name }}">
                 <a class="nav-link " href="{{ path('brand_detail',{id : brand.id}) }}"> {{brand.name }}</a>
            </div>
            </div>
              {% endfor %}

            </div>
       </div>
       </section>
</main>

    
{% endblock %}

