{% extends 'base.html.twig' %}

{% block title %}O'cars{% endblock %}

{% block body %}
  <div class="container my-4">
       
        <h2>Details of the car--{{cars.model}}</h2>
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">model</th>
                    <th scope="col">year</th>
                    <th scope="col">Brand</th>
                    
                     <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
             
                <tr>
                    <th scope="row">{{cars.id}}</th>
                    <td>{{cars.model}}</td>
                    <td>{{cars.releaseYear|date('Y')}}</td>
                    <td>{{cars.brands.name}}</td>
                   
                    <td class="text-end">
                       {% if is_granted('CAR_EDIT', cars) %} 
                         <a href="{{path('cars_edit',{id:cars.id})}}" class="btn btn-sm btn-warning">
                            <i class="fa fa-pencil-square-o" aria-hidden="true">Update</i>
                        </a>
                        {% endif %}
                        {% if is_granted('CAR_DELETE',cars) %}
                         <a href="{{path('cars_delete',{id:cars.id})}}" class="btn btn-sm btn-danger">
                            <i class="fa fa-pencil-square-o" aria-hidden="true">delete</i>
                        </a>
                       {% endif %}
                    </td>
                </tr>
          
            </tbody>
        </table>
    </div>
{% endblock %}